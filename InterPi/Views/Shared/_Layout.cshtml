<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link rel="icon" type="image/x-icon" href="~/Content/Images/favicon.ico" />*@
    <link rel="icon" type="image/png" href="~/Content/Images/logot.png" />
    <title>InterPiHo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <div>
                    <img class="nav-logo" src="~/Content/Images/logot.png">
                    @Html.ActionLink("InterPiHo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
               

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ">
                    <li>@Html.ActionLink("Édition 2017", "Edition2017", "Home")</li>
                    <li>@Html.ActionLink("Édition 2018", "Edition2018", "Home")</li>
                    <li>@Html.ActionLink("Édition 2019", "Edition2019", "Home")</li>
                    <li>@Html.ActionLink("Inscription", "Inscription", "Home")</li>
                    <li>@Html.ActionLink("Sponsors", "Sponsors", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - InterPiHo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

 
  
</body>
</html>

<style>
    .navbar-brand > img {
        height: 100%;
        
        padding: 15px; /* firefox bug fix */
        width: auto;
    }
    .nav-logo {
        max-height: 50px;
        max-width : 50px;
        padding : 0px;
        margin : 0px;
    }
</style>

